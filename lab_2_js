//task1
function cube(numb){
	return(numb*numb*numb)
}

alert("Task 1")
var numb;
numb=prompt("Enter number of your variant: ");

alert("Your variant in cube: " +cube(numb));



//task2
function numbers(data,month,variant){
	return((data+month)/variant)
}

alert("Task 2")
var data,month,variant;
data=prompt("Enter the data of your birth(number): ");
month=prompt("Enter the month of your birth(number): ");
variant=prompt("Enter number of your variant: ");

alert(+numbers(+data,+month,+variant));



//task3
function week(day){
	if( day == 1){ 
        alert("Понеділок") ;}
   else if(day == 2) {
         alert("Вівторок");}
   else if(day == 3) {
         alert("Середа"); }
   else if(day == 4) {
         alert("Четвер"); }
   else if(day == 5) {
         alert("П'ятниця"); }
   else if(day == 6) {
         alert("Субота"); }
   else if(day == 7) {
         alert("Неділя"); }
   else  {
	 alert("Число не входить в межі [1;7]"); }
         return day
}

	alert("Task 3")
var day;
day=prompt("Введіть число сьогоднішнього дня в межах [1;7]: ");
day=week(day);



